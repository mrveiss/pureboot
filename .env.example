# PureBoot Environment Configuration
# Copy this file to .env and configure for your deployment

# ============================================
# Controller Settings
# ============================================

# Secret key for JWT tokens and encryption (REQUIRED - generate a secure random key)
# Generate with: python -c "import secrets; print(secrets.token_urlsafe(32))"
PUREBOOT_SECRET_KEY=CHANGE_ME_IN_PRODUCTION_32_CHARS!

# PostgreSQL password (for production profile)
POSTGRES_PASSWORD=change_this_password

# ============================================
# Site Agent Settings
# ============================================

# Site ID for this agent (must match a site created in central controller)
AGENT_SITE_ID=site-001

# Central controller URL
AGENT_CENTRAL_URL=http://central.example.com:8080

# Registration token (generated by: POST /api/v1/sites/{site_id}/agent-token)
AGENT_REGISTRATION_TOKEN=

# ============================================
# Optional Settings
# ============================================

# Enable debug mode (not recommended for production)
# PUREBOOT_DEBUG=false

# DHCP Proxy (enable if your DHCP server doesn't support PXE options)
# PUREBOOT_DHCP_PROXY__ENABLED=false

# Agent cache size in GB
# PUREBOOT_AGENT__CACHE_MAX_SIZE_GB=50

# Heartbeat interval in seconds
# PUREBOOT_AGENT__HEARTBEAT_INTERVAL=60
